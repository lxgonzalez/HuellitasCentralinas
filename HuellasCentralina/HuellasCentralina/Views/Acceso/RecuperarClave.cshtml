@model Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Recuperar Clave</title>
    <link rel="icon" type="image/png" href="~/images/general/huella.png" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

</head>
<body class="bg-light">
    <partial name="_Notification" />

    <div class="container bg-primary bg-opacity-25 mt-5">
        <div class="row">
            <form method="post">
                <div class="p-2 mt-4">
                    <div class="row">
                        <div class="col-5 justify-content-center d-flex align-items-center">
                            <img src="/images/general/logo.png" class="img-fluid" style="max-width: 300px" />
                        </div>

                        <div class="col-7">
                            <div class="row">
                                <div class="row pb-4">
                                    <h2><b>Recuperar Clave</b></h2>
                                </div>
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label>Nombre</label>
                                        <input asp-for="Nombre" type="text" class="form-control" />
                                        <span asp-validation-for="Nombre" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label>Apellido</label>
                                        <input asp-for="Apellido" type="text" min="0" class="form-control" />
                                        <span asp-validation-for="Apellido" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label>Email</label>
                                        <input asp-for="Email" type="text" min="0" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label>Usuario</label>
                                        <input asp-for="NombreUsuario" type="text" min="0" class="form-control" />
                                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 d-flex justify-content-center ">
                                            <button type="submit" class="btn btn-secondary">Validar Datos</button>
                                        </div>
                                    </div>
                                    @if (Model != null && !String.IsNullOrEmpty(Model.Clave))
                                    {
                                        <div class="mb-3">
                                            <label>Clave</label>
                                            <input asp-for="Clave" type="text" min="0" class="form-control" value="@Model.Clave" />
                                        </div>
                                    }
                                    
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <a class="text-primary" asp-action="Index"><b>Login</b></a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</body>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</html>
