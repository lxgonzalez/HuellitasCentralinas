@model Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="icon" type="image/png" href="~/images/general/huella.png" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
</head>
<body>
    <partial name="_Notification" />

    <div class="container bg-light mt-5 text-black">
        <div class="row">
            <!-- Columna para el formulario de inicio de sesión -->
            <div class="col-sm-6">
                <div class="row justify-content-center text-center">
                    <img src="/images/general/logo.png" class="img-fluid m-lg-4" style="max-width: 300px" />
                    <h4><b>LOGIN</b></h4>
                </div>
                <form asp-controller="Acceso" asp-action="Index" method="post">
                    <div class="mb-4">
                        <div class="row justify-content-center">
                            <div class="col-6">
                                <label class="form-label">Usuario</label>
                                <input type="text" class="form-control" asp-for="NombreUsuario">
                                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <div class="row justify-content-center">
                            <div class="col-6">
                                <label class="form-label">Clave</label>
                                <input type="password" class="form-control" asp-for="Clave">
                                <span asp-validation-for="Clave" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-2">
                            <button type="submit" class="btn btn-secondary">Ingresar</button>
                        </div>
                    </div>
                </form>
                <div class="row text-center">
                    <a class="btn btn-link" asp-action="RecuperarClave">¿Olvidaste tu clave?</a>
                    <a class="btn btn-link" asp-action="Registrarse">¿No tienes cuenta? Registrate</a>
                </div>
            </div>

            <!-- Columna para las imágenes con position-relative -->
            <div class="col-sm-6 position-relative">
                <img src="/images/general/Tringulo rosado.png" class="img-fluid position-absolute" style="height: 480px; right: 0;" />
                <img src="/images/general/Tringulo verde.png" class="img-fluid position-absolute" style="height: 480px; right: 0;" />
                <img src="/images/general/Tringulo turquesa.png" class="img-fluid position-absolute" style="height: 480px; right: 0;" />
                <div class="bg-white position-absolute text-center" style="width: 175px; height: 250px; right: 10%; top: 20%; z-index: 1;">
                    <img src="/images/general/perrito.png" class="img-fluid" />
                    <p>Los perros no son toda tu vida, pero hacen tu vida completa.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <a class="text-primary" asp-controller="Home" asp-action="Index"><b>Volver</b></a>
        </div>
    </div>

</body>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</html>
