@model Mensaje

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

</head>
<body>
    <partial name="_Notification" />
    <div class="container bg-secondary bg-opacity-25 text-black">
        <div class="row">
            <div class="row mt-2">
                <div class="col-8">
                    <h1>Solicitud de Adopción</h1>
                </div>
                <div class="col-4 justify-content-end">
                    @if (Model.Formulario.Aprobada == "Desaprobada")
                    {
                        <div class="bg-danger rounded-2 text-center p-2">
                            <h5>@Model.Formulario.Aprobada</h5>
                        </div>
                    }
                    else if (Model.Formulario.Aprobada == "Aprobada")
                    {
                        <div class="bg-success rounded-2 text-center p-2">
                            <h5>@Model.Formulario.Aprobada</h5>
                        </div>
                    }
                    else
                    {
                        <div class="bg-info rounded-2 text-center p-2">
                            <h5>@Model.Formulario.Aprobada</h5>
                        </div>
                    }
                </div>
            </div>
            <div class="border border-1 border-white">
                <h3>Para</h3>
                <p><b>Nombre: </b> @Model.Mascota.Usuario.Nombre @Model.Mascota.Usuario.Apellido </p>
                <p><b>Email: </b>@Model.Mascota.Usuario.Email</p>
            </div>
            <div class="border border-1 border-white">
                <h3>Información de la Mascota</h3>
                <p><b>Nombre: </b> @Model.Mascota.Nombre</p>
                <p><b>Sexo: </b>@Model.Mascota.Sexo</p>
                <p><b>Edad: </b>@Model.Mascota.Edad Meses</p>
                <p><b>Esterilizado: </b>@Model.Mascota.Esterilizado</p>
            </div>

            <div class="border border-1 border-white">
                <input asp-for="Mascota.IdMascota" type="text" class="form-control" value="@Model.Mascota.IdMascota" hidden />
                <h3>Situacion Familiar</h3>
                <h6>Personas que viven con usted:</h6>
                <div class="mb-3">
                    <label><b>Nombre / Parentesco / Edad:</b></label>
                    <p>@Model.Formulario.Persona1</p>
                </div>
                <div class="mb-3">
                    <label><b>Nombre / Parentesco / Edad:</b></label>
                    <p>@Model.Formulario.Persona2</p>
                </div>
                <div class="mb-3">
                    <label><b>Nombre / Parentesco / Edad:</b></label>
                    <p>@Model.Formulario.Persona3</p>
                </div>
                <div class="mb-3">
                    <label>
                        <b>
                            ¿Algún familiar espera un bebé?
                        </b>
                    </label>
                    @if (@Model.Formulario.Bebe)
                    {
                        <p>Si</p>
                    }
                    else
                    {
                        <p>No</p>
                    }
                </div>
            </div>
            <div class="border border-1 border-white">
                <h3>Domicilio</h3>
                <div class="mb-3">
                    <p><b>Inmueble: </b> @User.FindFirst("Inmueble")?.Value</p>
                    <label>
                        <b>
                            El lugar donde pasará el animal ¿tiene cerramiento? *
                        </b>
                    </label>
                    @if (@Model.Formulario.Cerramiento)
                    {
                        <p>Si</p>
                    }
                    else
                    {
                        <p>No</p>
                    }
                </div>
            </div>
            <div class="border border-1 border-white">
                <h3>Relación con los animales</h3>
                <div class="mb-3">
                    <label>
                        <b>
                            ¿Ha tenido alguna mala experiencia con animales? *
                        </b>
                    </label>
                    <p>@Model.Formulario.MalaExperiencia</p>
                </div>
                <div class="mb-3">
                    <label>
                        <b>
                            Cuéntenos sobre su último animal de compañía
                        </b>
                    </label>
                    <p>@Model.Formulario.TipoAnimal</p>
                </div>
                <div class="mb-3">
                    <label>
                        <b>
                            Sexo
                        </b>
                    </label>
                    <p>@Model.Formulario.SexoAnimal</p>
                </div>
                <div class="mb-3">
                    <label>
                        <b>
                            Falleció
                        </b>
                    </label>
                    <p>@Model.Formulario.Fallecio</p>
                </div>
                <div class="mb-3">
                    <label>
                        <b>
                            Falleció
                        </b>
                    </label>
                    <p>@Model.Formulario.Fallecio</p>
                </div>
            </div>
            <div class="border border-1 border-white">
                <h3>Preguntas Varias</h3>
                <div class="mb-3">
                    <label>
                        <b>
                            ¿Por qué desea adoptar un animal de compañía?
                        </b>
                    </label>
                    <p>@Model.Formulario.PorqueAdopta</p>
                </div>
                <div class="mb-3">
                    <label>
                        <b>
                            Si por algún motivo tuviera que cambiar de domicilio, ¿qué pasaría con su animal de compañía?
                        </b>
                    </label>
                    <p>@Model.Formulario.QuePasaria</p>
                </div>
                <div class="mb-3">
                    <label>
                        <b>
                            Si usted viaja por más de un día, el animal de compañía:
                        </b>
                    </label>
                    <p>@Model.Formulario.SiViaja</p>
                </div>
                <div class="mb-3">
                    <label>
                        <b>
                            ¿Cuánto tiempo durante el día el animal de compañía pasará solo?
                        </b>
                    </label>
                    <p>@Model.Formulario.TiempoSolo</p>
                </div>
                <div class="mb-3">
                    <label>
                        <b>
                            ¿Dónde pasará durante el día?
                        </b>
                    </label>
                    <p>@Model.Formulario.Dia</p>
                </div>
                <div class="mb-3">
                    <label>
                        <b>
                            ¿Dónde pasará durante la noche? *
                        </b>
                    </label>
                    <p>@Model.Formulario.Noche</p>
                </div>
                <div class="mb-3">
                    <label>
                        <b>
                            ¿En dónde hará sus necesidades el animal?
                        </b>
                    </label>
                    <p>@Model.Formulario.Necesidades</p>
                </div>
                <div class="mb-3">
                    <label>
                        <b>
                            ¿Qué comerá habitualmente el animal de compañía?
                        </b>
                    </label>
                    <p>@Model.Formulario.Comida</p>
                </div>
                <div class="mb-3">
                    <label>
                        <b>
                            Si su animal de compañía enferma usted:
                        </b>
                    </label>
                    <p>@Model.Formulario.Enferma</p>
                </div>
                <div class="mb-3">
                    <label>
                        <b>
                            Estime cuánto dinero podría gastar en su animal de compañía, mensualmente:                         </b>
                    </label>
                    <p>@Model.Formulario.Dinero</p>
                </div>
                <div class="mb-3">
                    <label>
                        <b>
                            ¿Está de acuerdo en que se haga una visita periódica a su domicilio para ver cómo se encuentra el adoptado?
                        </b>
                    </label>
                    <p>@Model.Formulario.Visita</p>
                </div>
                <div class="mb-3">
                    <label>
                        <b>
                            ¿Está usted Informado y consciente sobre la ordenanza municipal acerca de la tenencia responsable de animales de compañía? 
                        </b>
                    </label>
                    <p>@Model.Formulario.Municipal</p>
                </div>
                <div class="mb-3">
                    <label>
                        <b>
                            ¿La adopción fue compartida con su familia?                         </b>
                    </label>
                    <p>@Model.Formulario.Familia</p>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</html>